  {
    "name": "Yahoo Fantasy Team Stat Display",
    "version": "1.0",
    "description": "Displays your team's player stats and current week's match up score for Yahoo Fantasy Basketball in a pop-up for quick viewing!",
    "permissions": ["<all_urls>", "storage", "contextMenus"],
    "background": {
    "scripts": ["background.js"],
    "persistent": true
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "Stat Display for Yahoo Fantasy!",
      "default_icon": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "manifest_version": 2
  }